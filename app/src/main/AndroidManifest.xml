<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dandiahmadin.notesapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_note"
        android:label="@string/app_name_nim"
        android:roundIcon="@drawable/ic_launcher_note"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesApp"
        tools:targetApi="31">
        <activity
            android:name=".activity.note.DetailNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesApp.Custom"/>
        <activity
            android:name=".activity.note.AddNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesApp.Custom" />
        <activity
            android:name=".activity.note.EditNoteActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesApp.Custom" />
        <activity
            android:name=".activity.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesApp.Custom" />
        <activity
            android:name=".activity.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesApp.Custom" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.NotesApp.Custom">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.NotesApp.Custom" />
    </application>

</manifest>